{
    "__version": "1.1",
    "__comments": "vCenter Server with an embedded Platform Services Controller to an ESXi host.",
    "target.vcsa": {
        "appliance": {
            "deployment.network": "{{ vcenter.network }}",
            "deployment.option": "{{ vcenter.deployment }}",
            "name": "{{vcenter.name }}",
            "thin.disk.mode": "{{ vcenter.thin}}"
        },
        "esx": {
            "hostname": "{{ pESX.ip }}",
            "username": "{{ pESX.user }}",
            "password": "{{ pESX.password }}",
            "datastore": "{{ vcenter.datastore }}"
        },
        "network": {
            "hostname": "{{ vcenter.name }}",
            "dns.servers": [
                "{{ dns1 }}",
                "{{ dns2 }}"
            ],
            "gateway": "{{ vcenter.gw }}",
            "ip": "{{ vcenter.ip }}",
            "ip.family": "ipv4",
            "mode": "static",
            "prefix": "{{ vcenter.mask }}"
        },
        "os": {
            "password": "{{ vcenter.password }}",
            "ssh.enable": true
        },
        "sso": {
            "password": "{{ vcenter.password }}",
            "domain-name": "{{ vcenter.domain }}",
            "site-name": "site1"
        }
    }
}
